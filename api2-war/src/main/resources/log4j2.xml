<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!-- We use a specific patternLayout with JSON formatting. It adds a stacktrace (if available) and removes
                 newlines, tabs and double quotes, so everything can be parsed by our ELK stack -->
            <PatternLayout>
                <alwaysWriteExceptions>false</alwaysWriteExceptions>
                <pattern>{&quot;@timestamp&quot;:&quot;%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX}&quot;,&quot;level&quot;:&quot;%-5p&quot;,&quot;thread&quot;:&quot;%t&quot;,&quot;class&quot;:&quot;%C&quot;, &quot;code_line_number&quot;:&quot;%L&quot;,&quot;message&quot;:&quot;%replace{%m %throwable}{[\n\t"]}{ }&quot;}%n</pattern>
            </PatternLayout>

            <!-- Use this pattern for local debugging -->
<!--        <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %highlight{%level}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green, DEBUG=blue} %logger{36}:%L - %msg%n" />-->
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>

        <Logger name="eu.europeana" level="INFO"/>
        <Logger name="org.mongodb.driver.connection" level="WARN"/> <!-- to prevent opened/closed connection messages -->
        <Logger name="org.apache.jena.riot" level="ERROR" /> <!-- to prevent JENA warnings about parsing data -->

        <Logger name="eu.europeana.corelib.record.api.IIIFLink" level="INFO" />

        <Logger name="eu.europeana.api2.v2.service.translate.BeanFilterLanguage" level="INFO" />

        <!-- Set to DEBUG to see which record fields are or are not chosen to be translated + see how long the entire process took -->
        <Logger name="eu.europeana.api2.v2.service.translate.BeanTranslateService" level="INFO" />

        <!-- Set to DEBUG to see which search result fields are or are not chosen to be translated + see how long the entire process took \
             use TRACE to see details which values are selected for translations -->
        <Logger name="eu.europeana.api2.v2.service.translate.SearchResultTranslateService" level="INFO" />

        <!-- Set to DEBUG to see which translation requests are sent, or TRACE to see request contents -->
        <Logger name="eu.europeana.api2.v2.service.translate.TranslationUtils" level="INFO" />
    </Loggers>
</Configuration>
