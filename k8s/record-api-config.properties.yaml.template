# To configure deployment,
# - copy this file to "record-api-config-map.properties.yaml"
# - paste europeana.properties and google_cloud_credentials.json files as required
apiVersion: v1
kind: ConfigMap
metadata:
  name: record-api-config-map
data:
  europeana.properties: |
    # paste properties file here. eg:
    route1.path               = localhost
  google_cloud_credentials.json: |
    # paste credentials file here. eg
    {
    "type": "service_account",
    "project_id": "xyz",
    }